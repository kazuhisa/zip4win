<%= form_tag(file_index_path, class: 'dropzone', id: 'upload-dropzone') do %>
  <div class="fallback">
    <%= hidden_field_tag :abc, 123 %>
  </div>
<% end %>

<div class="download">
  <%= form_tag(download_file_path(@zip_id), data: { turbolinks: false }, method: :get) do %>
    <p>
      password: <%= text_field_tag :password, @password %>
    </p>
    <%= button_tag :type => "submit", :class =>"btn btn-default btn-s-md" do %>
      <i class="fa fa-download fa-5x"></i>
    <% end %>
  <% end %>
</div>